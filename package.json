{
  "name": "javascript-unit-testing",
  "version": "1.0.0",
  "description": "A dedicated repository for learning and practicing JavaScript unit testing concepts and techniques. This repository includes examples, exercises and projects using popular testing framework `vitest`.",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "prettier": "prettier --check \"**/*.{js,jsx,json,html,css,ts,tsx,yml,yaml}\"",
    "prettier:write": "prettier --write \"**/*.{js,jsx,json,html,css,ts,tsx,yml,yaml}\" --ignore-unknown",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,json,html,css,ts,tsx,yml,yaml}": [
      "npm run prettier:write"
    ]
  },
  "keywords": [
    "JavaScript Unit Testing",
    "Unit Testing",
    "vitest"
  ],
  "author": "Rashmi Raj",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "vitest": "^2.1.8"
  }
}
